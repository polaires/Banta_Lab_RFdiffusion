# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for source code
*.py text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.html text eol=lf
*.sh text eol=lf

# Windows batch files need CRLF
*.cmd text eol=crlf
*.bat text eol=crlf

# Binary files - don't touch
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.pdb binary
*.fasta binary
*.cif binary
*.mol2 binary
*.sdf binary
